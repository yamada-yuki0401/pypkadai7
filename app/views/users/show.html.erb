<div class="container">
<div class="row">
  <div class="col-md-3">
  <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60,60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"%>
<table class="table table-borderless">
  <tr class="border-top">
    <th>name</th>
    <td><%= @user.name%></td>
  </tr>
<tr class="border-top">
    <th>introduction</th>
    <td><%= @user.introduction%></td>
  </tr>
  <tr>
    <td><%= "フォロー数: #{@user.follower.count}" %></td>
    <td><%= "フォロワー数: #{@user.followed.count}" %></td>
  </tr>
</table>
<%= link_to edit_user_path(@user.id) do %>
<%= button_tag '<i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>'.html_safe, :type => "submit",
    :class =>"btn btn-default btn-s-md w-100 mt-2" %>
<% end %>
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book' ,class:"btn btn-success" %>
<% end %>
  </div>
<div class="col-md-8 offset-md-1">
<h3>Books</h3>

<table class="table table-borderless">
  <tr class="border-top">
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @book.each do |book| %>
 <tr class="border-top">
    <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"), user_path(@user)%></td>
    <td>
      <%= link_to book.title, book_path(book)  %>
    </td>
    <td><%= book.body %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>