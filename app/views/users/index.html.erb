<div class="container">
<div class="row">
  <div class="col-md-3">
  <%= render 'users/list', book: @book , user: @user%>
  </div>
<div class="col-md-8 offset-md-1">
<h3>User</h3>
<table class="table table-borderless">
  <tr class="border-top">
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr class="border-top">
    <td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"%></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>