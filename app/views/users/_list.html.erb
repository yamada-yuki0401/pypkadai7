<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"%>
<table class="table table-borderless">
  <tr class="border-top">
    <th>name</th>
    <td><%= current_user.name%></td>
  </tr>
  <tr class="border-top">
    <th>introduction</th>
    <td><%= current_user.introduction%></td>
  </tr>
  <tr>
       <% if not current_user == user %>
        <% if current_user.following?(user) %>
          <td><%= link_to 'フォロー外す', relationships_unfollow_path(user.id), method: :POST %></td>
        <% else %>
          <td><%= link_to 'フォローする', relationships_follow_path(user.id), method: :POST %></td>
        <% end %>
      <% end %>
  </tr>
</table>
<%= link_to button_tag('<i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>'.html_safe, :type => "submit",
    :class =>"btn btn-default btn-s-md w-100 mt-2"), edit_user_path(current_user.id) %>

<h2>New book</h2>
<%= form_with model:book, url:'/books', local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book' ,class:"btn btn-success" %>
<% end %>
