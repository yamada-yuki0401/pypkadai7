<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container">
<div class="row">
  <div class="col-md-3">
  <%= render 'books/list', book: @book, user: @user %>
  </div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <tr class="border-top">
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
 <tr class="border-top">
    <td>
      <%= link_to attachment_image_tag(@user, :profile_image, :fill, 5, 5, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"), user_path(book.user_id) %>
    </td>
    <td>
      <%= link_to book_path(book) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
   <% end %>
</table>
</div>
</div>
</div>